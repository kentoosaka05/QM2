      "source": [
        "import pandas as pd\n",
        "\n",
        "df_asylum = pd.read_csv('Asylum Seeker accommodation.csv', encoding='latin1')\n",
        "df_protest = pd.read_csv('lad_code.csv', encoding='latin1') # The file your group member made\n",
        "\n",
        "# Convert People column to numeric, coercing errors to NaN\n",
        "df_asylum['People'] = pd.to_numeric(df_asylum['People'], errors='coerce')\n",
        "\n",
        "# Define Visible types\n",
        "visible_types = [\n",
        "    'Contingency Accommodation - Hotel',\n",
        "    'Contingency Accommodation - Other',\n",
        "    'Other Accommodation'\n",
        "]\n",
        "\n",
        "# Calculate total visible people per LA per Quarter\n",
        "la_visible = df_asylum[df_asylum['Accommodation Type'].isin(visible_types)].groupby(\n",
        "    ['LAD Code', 'Year-Quarter']\n",
        ")['People'].sum().reset_index()\n",
        "\n",
        "# Sort\n",
        "la_visible = la_visible.sort_values(['LAD Code', 'Year-Quarter'])"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {
        "id": "f0139f40"
      },
      "source": [
        "display(la_visible.head())"
      ],
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "la_visible['People'] = pd.to_numeric(la_visible['People'], errors='coerce')\n",
        "\n",
        "# Use .diff() within each group\n",
        "la_visible['shock_change'] = la_visible.groupby('LAD Code')['People'].diff()\n",
        "\n",
        "# Fill NaN values with 0\n",
        "la_visible['shock_change'] = la_visible['shock_change'].fillna(0)"
      ],
      "metadata": {
        "id": "LGgQWyCRTb-P"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
